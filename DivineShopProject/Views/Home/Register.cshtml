@using Microsoft.AspNetCore.Http;
@model DivineShopProject.View_Model.RegisterForm;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register Page</title>
</head>
<body>


    <div class="container">
        <div class="clo-sm-10" style="width:600px;margin-left:250px;margin-top:50px;">
            <div class="jumbotron" style="padding-left:20px;">
                <div class="form-group" style="margin-top:-50px;">
                    <img src="~/images/banner.png" style="width:30%;margin-left:38%;margin-top:10%;border-radius:5px">
                </div>
                <form class="form-horizontal" style="margin-left:50px;" asp-controller="Home" asp-action="Register" method="post">
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user">
                            </span>
                        </span>
                        <input class="form-control" placeholder="Enter Username..." required asp-for="Username" />

                    </div>
                    <font color="red">
                        <span asp-validation-for="Username"></span>
                    </font>

                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock">
                            </span>
                        </span>
                        <input type="password" class="form-control" placeholder="Enter Password..." required asp-for="Password" />

                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock">
                            </span>
                        </span>
                        <input type="password" class="form-control" placeholder="Enter Password..." required asp-for="ConfirmPassword" />
                    </div>
                    <font color="red">
                        <span>
                            @ViewBag.Error
                        </span>
                    </font>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user">
                            </span>
                        </span>
                        <input type="email" class="form-control" placeholder="Enter Email..." required asp-for="Email" />


                    </div>
                    <font color="red">
                        <span asp-validation-for="Email"></span>
                    </font>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user">
                            </span>
                        </span>
                        <input class="form-control" placeholder="Enter Name..." required asp-for="Fullname" />

                    </div>

                    <div class="form-group ">
                        <button class="btn btn-primary" type="submit" style="width:500px;"> Register </button>
                    </div>
                </form>
                @if (Context.Session.GetString("ERROR") != null)
                {
                    <font color="red">
                        @Context.Session.GetString("ERROR").ToString()
                    </font>
                }
            </div>
        </div>
    </div>
</body>
</html>
