
@model DivineShopProject.Models.User;
@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>
</head>
<body>


    <div class="container">
        <div class="clo-sm-10" style="width:600px;margin-left:250px;margin-top:50px;">
            <div class="jumbotron" style="padding-left:20px;height:270px;background-color:silver">
                <div class="form-group" style="margin-top:-50px;">
                    <img src="~/images/banner.png" style="width:30%;margin-left:38%;margin-top:10%;border-radius:5px">
                </div>
                <form class="form-horizontal" style="margin-left:50px;" asp-controller="Home" asp-action="RetakePassword" method="post">
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user">
                            </span>
                        </span>
                        <input class="form-control" placeholder="Enter Username..." required asp-for="Username" />
                    </div>
                    <span class="text-danger">
                        <strong> @Context.Session.GetString("ERRORUSER")</strong>
                    </span>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-envelope">
                            </span>
                        </span>
                        <input type="email" class="form-control" placeholder="Enter Email..." required asp-for="Email" />
                        <span asp-validation-for="Email"></span>


                    </div>
                    <span class="text-danger">
                        <strong> @Context.Session.GetString("ERRORMAIL")</strong>
                    </span>
                    <div class="form-group ">
                        <button class="btn btn-primary" type="submit" style="width:500px;"> Accept </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
